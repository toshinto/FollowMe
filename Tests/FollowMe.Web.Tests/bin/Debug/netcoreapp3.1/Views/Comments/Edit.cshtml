@model FollowMe.Web.ViewModels.Comments.EditCommentViewModel
<h1 class="text-center suls-text-color">Edit your comment</h1>
<form asp-controller="Comments" asp-action="Edit" method="post" id="AddHello">
    <div class="top-border-line primary-separator"></div>
    <div class="form-group">
        <div>
            <label asp-for="@Model.Content"></label>
            <input asp-for="@Model.Content" class="form-control" />
            <span asp-validation-for="@Model.Content" class="text-danger"></span>
        </div>
    </div>
    <div class="top-border-line primary-separator"></div>
    <div><input class="invisible" id="commentId" name="commentId" value="@Model.Id" /></div>
    <div class="button-holder d-flex justify-content-center">
        <input type="submit" class="btn btn-primary" value="Save" />
    </div>
</form>
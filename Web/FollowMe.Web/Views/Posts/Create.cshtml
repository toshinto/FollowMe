@using Microsoft.AspNetCore.Identity
@using FollowMe.Data.Models
@model FollowMe.Web.ViewModels.Posts.PostsCreateModel
@inject UserManager<ApplicationUser> UserManager
@{
    var userId = this.UserManager.GetUserId(this.User);
}
<h1 class="text-center suls-text-color">Post to @Model.UserUserName </h1>
<form asp-controller="Posts" asp-action="Create" method="post" id="AddPostToUser">
    <div class="top-border-line primary-separator"></div>
    <div class="form-group">
        <div>
            <label asp-for="@Model.Title"></label>
            <input asp-for="@Model.Title" class="form-control" />
            <span asp-validation-for="@Model.Title" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="@Model.Content"></label>
            <input asp-for="@Model.Content" class="form-control" />
            <span asp-validation-for="@Model.Content" class="text-danger"></span>
        </div>
    </div>
    <input class="invisible" id="userId" name="userId" value="@Model.UserId" />
    <div class="top-border-line primary-separator"></div>
    <div class="button-holder d-flex justify-content-center">
        <input type="submit" class="btn btn-primary" value="Add post" />
    </div>
</form>
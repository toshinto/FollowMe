@model FollowMe.Web.ViewModels.Profiles.EditPostViewModel
<h1 class="text-center suls-text-color">Edit post </h1>
<form asp-controller="Posts" asp-action="Edit" method="post" id="AddPostToUser">
    <div class="top-border-line primary-separator"></div>
    <div class="form-group">
        <label for="title" class="suls-text-color text-right">Title:</label>
        <input type="text" class="form-control" id="title" name="title" value="@Model.Title" />
        <label for="content" class="suls-text-color text-right">Submit your content here:</label>
        <textarea class="form-control" id="content" name="content" rows="10">@Model.Content</textarea>
    </div>
    <input class="invisible" id="postId" name="postId" value="@Model.Id" />
    <div class="top-border-line primary-separator"></div>
    <div class="button-holder d-flex justify-content-center">
        <input type="submit" class="btn btn-primary" value="Edit post" />
    </div>
</form>
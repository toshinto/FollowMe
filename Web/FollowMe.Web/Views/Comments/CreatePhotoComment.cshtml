@model FollowMe.Web.ViewModels.Comments.CommentsPhotoModel
<form asp-controller="Comments" asp-action="CreatePhotoComment" method="post" id="AddHello">
    <div class="top-border-line primary-separator"></div>
    <div class="form-group">
        <div>
            <label asp-for="@Model.Content"></label>
            <input asp-for="@Model.Content" class="form-control" />
            <span asp-validation-for="@Model.Content" class="text-danger"></span>
        </div>
    </div>
    <div class="top-border-line primary-separator"></div>
    <div class="button-holder d-flex justify-content-center">
        <div class="row justify-content-center">
            <input class="invisible" id="userId" name="userId" value="@Model.UserId" />
            <input class="invisible" id="photoId" name="photoId" value="@Model.PhotoId" />
        </div>
    </div>
    <input type="submit" class="btn btn-primary" value="Add comment" />
</form>

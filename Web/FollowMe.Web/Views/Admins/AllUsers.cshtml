@using System.Globalization;
@model FollowMe.Web.ViewModels.Admins.AdminUserView

<div class="container">
    <div class="section">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="page-header text-center">
                    <p>All Users</p>
                </div>
                <div class="component">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">User Full Name</th>
                                <th scope="col">User Email</th>
                                <th scope="col">Created On</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users)
                            {

                                <tr class="table-light">
                                    <th scope="row">@user.UserUserCharacteristicsFullName</th>
                                    <td>@user.UserUserName</td>
                                    <td>@user.CreatedOn.ToString("MM/dd/yy H:mm:ss", CultureInfo.CreateSpecificCulture("en-US"))</td>
                                    <td> <form method="post"><a class="btn btn-danger" href="/Admins/DeleteUser?id=@user.UserId">DELETE</a></form></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<p>Count of users: @Model.CountOfElements</p>
<partial name="_PagingPartial" model="@Model" />
@using FollowMe.Data.Models.Enum
@model FollowMe.Web.ViewModels.Profiles.EditDetailsViewModel
<section class="py-5">
    <div class="container">
        <h1 style="margin: 2%; text-align: center;">Change personal details</h1>
        <div style="padding: 5%;">
            <form method="post">
                <div>
                    <label asp-for="@Model.FirstName">First name</label>
                    <input asp-for="@Model.FirstName" class="form-control" />
                    <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="@Model.LastName">Last name</label>
                    <input asp-for="@Model.LastName" class="form-control" />
                    <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="@Model.Height"></label>
                    <input asp-for="@Model.Height" class="form-control" />
                    <span asp-validation-for="@Model.Height" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="@Model.Weight"></label>
                    <input asp-for="@Model.Weight" class="form-control" />
                    <span asp-validation-for="@Model.Weight" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="@Model.Description">Say something about you</label>
                    <input asp-for="@Model.Description" class="form-control" />
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="@Model.City">Edit your city</label>
                    <select asp-for="City" asp-items="Html.GetEnumSelectList<City>()"></select>
                </div>
                <div>
                    <label asp-for="@Model.Gender">Edit your gender</label>
                    <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()"></select>
                </div>
                <div>
                    <label asp-for="@Model.EyeColor">Edit your eyes color</label>
                    <select asp-for="EyeColor" asp-items="Html.GetEnumSelectList<EyesColor>()"></select>
                </div>
                <div>
                    <label asp-for="@Model.HairColor">Edit your hair color</label>
                    <select asp-for="HairColor" asp-items="Html.GetEnumSelectList<HairColor>()"></select>
                </div>
                <div>
                    <label asp-for="@Model.WeddingStatus">Edit your wedding status</label>
                    <select asp-for="WeddingStatus" asp-items="Html.GetEnumSelectList<WeddingStatus>()"></select>
                </div>
                <div>
                    <label asp-for="@Model.WhatAreYouSearchingFor">Edit what are you searching for</label>
                    <select asp-for="WhatAreYouSearchingFor" asp-items="Html.GetEnumSelectList<WhatAreYouSearchingFor>()"></select>
                </div>
                <input class="invisible" id="userId" name="userId" value="@Model.UserId" />
                <div class="button-holder d-flex justify-content-center">
                    <input type="submit" class="btn btn-primary" value="Save" />
                </div>
            </form>
        </div>
    </div>
</section>

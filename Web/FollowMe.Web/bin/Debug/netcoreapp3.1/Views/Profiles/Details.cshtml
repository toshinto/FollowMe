@using FollowMe.Data.Models;
@using FollowMe.Data.Models.Enum
@model FollowMe.Web.ViewModels.Profiles.CreateDetailsViewModel
<section class="py-5">
    <div class="container">
        <h1 style="margin: 2%; text-align: center;">Add Personal Info</h1>
        <div style="padding: 5%;">
            <form method="post">
                <div>
                    <label asp-for="@Model.FirstName"></label>
                    <input asp-for="@Model.FirstName" class="form-control" placeholder="Enter your first name" />
                    <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="@Model.LastName"></label>
                    <input asp-for="@Model.LastName" class="form-control" placeholder="Enter your last name" />
                    <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="@Model.Date">Birthday</label>
                    <input type="date" asp-for="@Model.Date" class="form-control" />
                    <span asp-validation-for="@Model.Date" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="@Model.CoverImageUrl"></label>
                    <input asp-for="@Model.CoverImageUrl" class="form-control" placeholder="Your profile picture" />
                    <span asp-validation-for="@Model.CoverImageUrl" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="@Model.Height"></label>
                    <input asp-for="@Model.Height" class="form-control" placeholder="Enter your height" />
                    <span asp-validation-for="@Model.Height" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="@Model.Weight"></label>
                    <input asp-for="@Model.Weight" class="form-control" placeholder="Enter your weight" />
                    <span asp-validation-for="@Model.Weight" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="@Model.Description"></label>
                    <input asp-for="@Model.Description" class="form-control" placeholder="Say something about you" />
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="@Model.EyeColor">Choose your gender</label>
                    <select asp-for="EyeColor" asp-items="Html.GetEnumSelectList<EyesColor>()"></select>
                </div>
                <div>
                    <label asp-for="@Model.Gender">Choose your gender</label>
                    <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()"></select>
                </div>
                <div>
                    <label asp-for="@Model.HairColor">Choose your gender</label>
                    <select asp-for="HairColor" asp-items="Html.GetEnumSelectList<HairColor>()"></select>
                </div>
                <div>
                    <label asp-for="@Model.WeddingStatus">Choose your gender</label>
                    <select asp-for="WeddingStatus" asp-items="Html.GetEnumSelectList<WeddingStatus>()"></select>
                </div>
                <div>
                    <label asp-for="@Model.WhatAreYouSearchingFor">Choose your gender</label>
                    <select asp-for="WhatAreYouSearchingFor" asp-items="Html.GetEnumSelectList<WhatAreYouSearchingFor>()"></select>
                </div>
                <div>
                    <label asp-for="@Model.City">Choose your gender</label>
                    <select asp-for="City" asp-items="Html.GetEnumSelectList<City>()"></select>
                </div>
                <button type="submit" class="btn btn-primary text-uppercase">Submit</button>
            </form>
        </div>
    </div>
</section>